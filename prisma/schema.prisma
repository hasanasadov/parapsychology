// prisma/schema.prisma
datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Certificate {
  id         String   @id @default(cuid())
  code       String   @unique
  fullName   String
  courseName String
  issuedAt   DateTime
  fileUrl    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
